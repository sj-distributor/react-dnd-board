{
  "name": "react-dnd-board-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @react-dnd-board/home dev",
    "dev:home": "yarn workspace @react-dnd-board/home dev",
    "build": "yarn workspaces foreach -A -pt run build",
    "build:lib": "yarn workspace react-dnd-board build",
    "build:home": "yarn workspace @react-dnd-board/home build",
    "test": "yarn workspace react-dnd-board test",
    "test:ui": "yarn workspace react-dnd-board test:ui",
    "test:run": "yarn workspace react-dnd-board test:run",
    "lint": "eslint .",
    "preview": "yarn workspace @react-dnd-board/home preview",
    "clean": "yarn workspaces foreach -A -pt run clean"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript-eslint": "^8.48.1"
  },
  "packageManager": "yarn@4.12.0"
}
