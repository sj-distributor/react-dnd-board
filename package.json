{
  "name": "react-dnd-board-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @react-dnd-board/home dev",
    "dev:home": "yarn workspace @react-dnd-board/home dev",
    "dev:lib": "yarn workspace react-dnd-board dev",
    "build": "yarn workspaces foreach -A -pt run build",
    "build:lib": "yarn workspace react-dnd-board build",
    "build:home": "yarn workspace @react-dnd-board/home build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest --run",
    "lint": "eslint .",
    "preview": "yarn workspace @react-dnd-board/home preview",
    "clean": "yarn workspaces foreach -A -pt run clean"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^4.0.15",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "fast-check": "^4.3.0",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  }
}
